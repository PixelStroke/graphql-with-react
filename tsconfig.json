{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "target": "ES2019",
        "module": "ES2020",
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
        "~/*": ["./app/*"]
        },
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
    ],
  }