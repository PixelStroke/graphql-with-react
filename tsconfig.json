{
    "compilerOptions": {
        "lib": ["ES2019"],
        "target": "ES2019",
        "module": "ES2020",
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "outDir": "build",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": [
        "**/*.ts",
        "src/**/*"
    ]
  }