{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "src",
        "rootDir": "src",
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ]
  }